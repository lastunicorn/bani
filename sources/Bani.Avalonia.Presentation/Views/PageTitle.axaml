<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:DustInTheWind.Bani.Avalonia.Presentation.ViewModels"

    x:Class="DustInTheWind.Bani.Avalonia.Presentation.Views.PageTitle"

    mc:Ignorable="d">

    <Design.DataContext>
        <viewModels:PageTitleViewModel />
    </Design.DataContext>

    <Border
        Background="WhiteSmoke"
        Padding="20 15">

        <DockPanel>

            <TextBlock
                DockPanel.Dock="Top"
                Text="{Binding Title}"
                FontSize="18" />

            <TextBlock
                Text="{Binding Description}"
                IsVisible="{Binding IsDescriptionVisible}"
                Margin="10 5 0 0"
                FontSize="12"
                TextWrapping="Wrap"/>

        </DockPanel>

    </Border>

</UserControl>