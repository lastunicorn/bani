<Window
    x:Class="DustInTheWind.Bani.Avalonia.Presentation.Controls.Main.MainWindow"

    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:main="clr-namespace:DustInTheWind.Bani.Avalonia.Presentation.Controls.Main"
    xmlns:pageTitle="clr-namespace:DustInTheWind.Bani.Avalonia.Presentation.Controls.PageTitle"
    xmlns:issuers="clr-namespace:DustInTheWind.Bani.Avalonia.Presentation.Controls.Issuers"
    xmlns:issuesTree="clr-namespace:DustInTheWind.Bani.Avalonia.Presentation.Controls.IssuesTree"

    mc:Ignorable="d"
    d:DesignWidth="800"
    d:DesignHeight="450"
    Icon="/Assets/avalonia-logo.ico"
    Title="{Binding WindowTitle}"
    Width="800"
    Height="600">

	<Design.DataContext>
		<main:MainViewModel />
	</Design.DataContext>

	<DockPanel Margin="20">

		<TextBlock
            DockPanel.Dock="Top"
            Text="{Binding BreadCrumbs}"
            Margin="0 0 0 10"
            Padding="0 10" />

		<!-- Left side: Issues Tree -->
		<issuesTree:IssuersTreeControl
            DockPanel.Dock="Left"
            Width="300"
            Margin="0 0 20 0"
            DataContext="{Binding IssuersTreeViewModel}" />

		<!-- Right side: Issuers Page -->
		<issuers:IssuersPage
            DataContext="{Binding IssuersPageViewModel}" />

	</DockPanel>

</Window>