<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:issuesTree="clr-namespace:DustInTheWind.Bani.Avalonia.Presentation.Controls.IssuesTree"

	x:Class="DustInTheWind.Bani.Avalonia.Presentation.Controls.IssuesTree.IssuersTreeControl"

    mc:Ignorable="d"
	d:DesignWidth="300"
    d:DesignHeight="450">

	<Design.DataContext>
		<issuesTree:IssuersTreeViewModel />
	</Design.DataContext>

	<DockPanel>

		<TextBlock
			DockPanel.Dock="Top"
			Text="Issuers Tree"
			FontWeight="Bold"
			Margin="0 0 0 10"
			HorizontalAlignment="Center" />

		<TreeView
			ItemsSource="{Binding Issues}"
			SelectedItem="{Binding SelectedItem}">

			<TreeView.DataTemplates>
				<TreeDataTemplate DataType="issuesTree:IssuerTreeNodeViewModel" ItemsSource="{Binding Emissions}">
					<TextBlock
						Text="{Binding DisplayText}"
						FontWeight="Bold"
						Padding="4 2" />
				</TreeDataTemplate>

				<DataTemplate DataType="issuesTree:EmissionTreeNodeViewModel">
					<TextBlock
						Text="{Binding DisplayText}"
						Padding="4 2"
						Foreground="DarkGray" />
				</DataTemplate>
			</TreeView.DataTemplates>

		</TreeView>

	</DockPanel>

</UserControl>